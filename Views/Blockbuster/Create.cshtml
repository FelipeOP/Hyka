@model Blockbuster

<form method="post">

    <div class="border p-3 mt-4">

        <div classs="row pb-2">
            <h2 class="text-primary">
                Create Blockbuster
            </h2>
        </div>

        <div class="mb-3">
            <label asp-for="Id">Cédula</label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"> </span>
        </div>

        <div class="mb-3">
            <label asp-for="Names">Nombres</label>
            <input asp-for="Names" class="form-control" />
            <span asp-validation-for="Names" class="text-danger"> </span>
        </div>

        <div class="mb-3">
            <label asp-for="Surnames">Apellidos</label>
            <input asp-for="Surnames" class="form-control" />
            <span asp-validation-for="Surnames" class="text-danger"> </span>
        </div>

        <div class="mb-3">
            <label asp-for="Age">Edad</label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"> </span>
        </div>

        <div class="mb-3">
            <label asp-for="Gender">Genero</label>
            <input asp-for="Gender" class="form-control" />
            <span asp-validation-for="Gender" class="text-danger"> </span>
        </div>

        <div class="mb-3">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"> </span>
        </div>

        <div class="mb-3">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"> </span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px"> Crear </button>

        <a asp-controller="Blockbuster" asp-action="Index" class="btn btn-secondary" style="width:150px"> View list</a>
    </div>

</form>

@*Allows to validate form without recharge the pages -> Client side*@
@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}